.fadeout.ng-hide-add {
    -webkit-transition: 1000ms ease-in-out all;
    -moz-transition: 1000ms ease-in-out all;
    -o-transition: 1000ms ease-in-out all;
    transition: 1000ms ease-in-out all;
    display: block !important;
}

